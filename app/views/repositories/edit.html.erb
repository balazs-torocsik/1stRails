<h1>Editing repository</h1>
 
<%= form_for :repository, url: repository_path(@repository), method: :patch do |f| %>
 
  <% if @repository.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@repository.errors.count, "error") %> prohibited
        this repository from being saved:
      </h2>
      <ul>
        <% @repository.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :repository_name %><br>
    <%= f.text_field :repository_name %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', repositories_path %>